<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
    <display-name>Trucks Project</display-name>
    <servlet>
      <servlet-name>AddCity</servlet-name>
      <servlet-class>de.telekom.school.servlet.AddCity</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddDistance</servlet-name>
        <servlet-class>de.telekom.school.servlet.AddDistance</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GetCities</servlet-name>
        <servlet-class>de.telekom.school.servlet.GetCities</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddDriverStatus</servlet-name>
        <servlet-class>de.telekom.school.servlet.AddDriverStatus</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CargoStatus</servlet-name>
        <servlet-class>de.telekom.school.servlet.CargoStatus</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>TruckStatus</servlet-name>
        <servlet-class>de.telekom.school.servlet.TruckStatus</servlet-class>
    </servlet>

    <servlet-mapping>
      <servlet-name>AddCity</servlet-name>
      <url-pattern>/html/AddCity</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
      <servlet-name>AddDistance</servlet-name>
      <url-pattern>/html/AddDistance</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GetCities</servlet-name>
        <url-pattern>/html/GetCities</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddDriverStatus</servlet-name>
        <url-pattern>/html/AddDriverStatus</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CargoStatus</servlet-name>
        <url-pattern>/html/CargoStatus</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>TruckStatus</servlet-name>
        <url-pattern>/html/TruckStatus</url-pattern>
    </servlet-mapping>
</web-app>
